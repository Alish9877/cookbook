<h1>Edit Recipe</h1>
<form action="/recipes/<%= recipe._id %>?_method=PUT" method="POST">
  <label for="name">Recipe Name:</label>
  <input type="text" name="name" id="name" value="<%= recipe.name %>" required><br>

  <label for="instructions">Instructions:</label>
  <textarea name="instructions" id="instructions"><%= recipe.instructions %></textarea><br>

  <label for="ingredients">Ingredients:</label>
  <input type="text" name="ingredients" id="ingredients" value="<%= recipe.ingredients.map(ingredient => ingredient.name).join(', ') %>" placeholder="Enter ingredients separated by commas"><br>

  <button type="submit">Update Recipe</button>
</form>
