<h1>Ingredients</h1>

<% if (ingredients.length === 0) { %>
  <p>No ingredients available yet.</p>
<% } else { %>
  <ul>
    <% ingredients.forEach(ingredient => { %>
      <li>
        <a href="/ingredients/<%= ingredient._id %>"><%= ingredient.name %></a>
        <form action="/ingredients/<%= ingredient._id %>?_method=DELETE" method="POST">
          <button type="submit">Delete</button>
        </form>
      </li>
    <% }) %>
  </ul>
<% } %>
<a href="/ingredients/new">Add New Ingredient</a>
